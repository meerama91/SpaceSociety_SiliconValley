<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
           parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/main_color</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:titleTextStyle">@style/MyTitleTheme</item>
    </style>

    <style name="MyTitleTheme"
           parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Action bar popup menu-->

    <style name="PopupMenu" parent="android:Widget.DeviceDefault.Light.PopupMenu">
        <!--<item name="android:background">@color/accent_color</item>-->
    </style>




</resources>